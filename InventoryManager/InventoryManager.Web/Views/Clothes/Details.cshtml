@model ClothesFormServiceModel

@{
    ViewData["Title"] = $"{Model.Name} Details";
    var productId = Context.Request.Path.ToString().Split("/")[3];
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-5">
        <div class="panel panel-info">
            <div class="panel-heading">
                Name
            </div>
            <div class="panel-body">
                @Model.Name
            </div>
        </div>

        <div class="panel panel-info">
            <div class="panel-heading">
                Type
            </div>
            <div class="panel-body">
                @Model.Type
            </div>
        </div>

        <div class="panel panel-info">
            <div class="panel-heading">
                Quantity
            </div>
            <div class="panel-body">
                @Model.Quantity
            </div>
        </div>

        <div class="panel panel-info">
            <div class="panel-heading">
                Size
            </div>
            <div class="panel-body">
                @Model.Size
            </div>
        </div>

        <div class="panel panel-info">
            <div class="panel-heading">
                Single Price
            </div>
            <div class="panel-body">
                @Model.SinglePrice
            </div>
        </div>

        <div class="panel panel-info">
            <div class="panel-heading">
                Description
            </div>
            <div class="panel-body">
                @Model.Description
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <img src="@Model.PictureUrl" style="width: 300px;padding-bottom: 20px" />
    </div>
</div>

<a asp-action="Edit" asp-route-id="@productId" class="btn btn-default">Edit product</a>
<input type="button" value="Delete product" class="btn btn-danger" data-toggle="modal" data-target="#deleteModal" /> 

<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Delete product</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this product?
            </div>
            <div class="modal-footer">
                <form method="post" asp-action="Delete">
                    <input type="hidden" name="id" value="@productId" />
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <input type="submit" value="Delete" class="btn btn-primary" />
                </form>
            </div>
        </div>
    </div>
</div>